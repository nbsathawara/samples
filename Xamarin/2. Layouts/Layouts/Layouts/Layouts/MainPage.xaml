<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:local="clr-namespace:Layouts"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Layouts.MainPage" Padding="50" Title="Layouts">
     
    <StackLayout Spacing="10">

        <Button Text="Stack Layout" FontSize="30" TextColor="White" BackgroundColor="IndianRed"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type local:StackPage}"/>

        <Button Text="Grid Layout" FontSize="30" TextColor="White" BackgroundColor="IndianRed"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type local:GridPage}"/>

        <Button Text="Absolute Layout" FontSize="30" TextColor="White" BackgroundColor="IndianRed"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type local:AbsolutePage}"/>

        <Button Text="Relative Layout" FontSize="30" TextColor="White" BackgroundColor="IndianRed"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type local:RelativePage}"/>

    </StackLayout>

</ContentPage>

