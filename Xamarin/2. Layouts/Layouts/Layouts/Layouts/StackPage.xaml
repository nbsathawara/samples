<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Layouts.StackPage" Padding="0,20,0,20">
    <StackLayout Orientation="Horizontal"
        HorizontalOptions="Center" VerticalOptions="Center"
         Padding="20" Spacing="20"
        BackgroundColor="Yellow">
        <StackLayout  BackgroundColor="Aqua">
            <Label Text="Text 1" BackgroundColor="Red" Padding="20" TextColor="White"/>
            <Label Text="Text 2" BackgroundColor="Green" Padding="20" TextColor="White"/>
        </StackLayout>
        <Label Text="Text 3" BackgroundColor="Blue" Padding="20" TextColor="White"/>
        <Label Text="Text 4" BackgroundColor="Gray" Padding="20" TextColor="White"/>
    </StackLayout>
</ContentPage>

