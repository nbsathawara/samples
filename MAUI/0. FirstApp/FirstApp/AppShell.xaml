<Shell
    x:Class="FirstApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirstApp"
    Shell.FlyoutBehavior="Disabled">
    <TabBar >
        <Tab 
        Title="Main Page">
            <ShellContent
        Title="Home"
        Icon="dotnet_bot.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        </Tab>
        <Tab Title="Layout Page">
            <ShellContent
        Title="LayoutPage"
         Icon="splash.png"
        ContentTemplate="{DataTemplate local:LayoutPage}"
        Route="LayoutPage" />
        </Tab>
        <Tab  Title="Test Page">

            <ShellContent
        Title="TestPage"
        ContentTemplate="{DataTemplate local:TestPage}"
        Route="TestPage" />
        </Tab>
    </TabBar>

